---
import IndexLayout from "@/layouts/indexLayout.astro";
import Hero from "../components/home/hero.astro";
import Home from "@/components/home/home.astro";
---

<IndexLayout>
  <Home />
</IndexLayout>

<style lang="scss">
  /* Best Sellers Section */
  .best-sellers-section {
    display: flex;
    width: 100%;
    margin: 0 auto;
    flex-direction: column;
    align-items: center;
    gap: 48px;
    background: #f9f3e7;
  }

  .section-title {
    width: 100%;
    color: #000;
    text-align: center;
    font-family:
      Inter,
      -apple-system,
      Roboto,
      Helvetica,
      sans-serif;
    font-size: 24px;
    font-weight: 400;
    line-height: normal;
  }

  .product-grid {
    display: flex;
    padding: 4px;
    align-items: flex-start;
    gap: 16px;
    width: 100%;
  }

  .product-card {
    display: grid;
    height: 256px;
    padding: 4px;
    flex: 1 0 0;
    grid-template-rows: repeat(1, minmax(0, 1fr));
    grid-template-columns: repeat(1, minmax(0, 1fr));
    border: 1px solid #996365;
  }

  .product-image {
    flex: 1 0 0;
    align-self: stretch;
    grid-row: 1 / span 1;
    grid-column: 1 / span 1;
    background: #d9d9d9;
  }

  /* About Section */
  .about-section {
    display: flex;
    height: 512px;
    flex-direction: column;
    align-items: center;
    gap: 32px;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    background: #f9f3e7;
  }

  .section-title-large {
    width: 100%;
    color: #000;
    text-align: center;
    font-family:
      Inter,
      -apple-system,
      Roboto,
      Helvetica,
      sans-serif;
    font-size: 32px;
    font-weight: 400;
    line-height: normal;
  }

  .about-content {
    display: flex;
    align-items: flex-start;
    gap: 32px;
    flex: 1 0 0;
    width: 100%;
  }

  .about-text {
    display: flex;
    padding: 8px;
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
    flex: 1 0 0;
  }

  .text-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
    width: 100%;
  }

  .text-line {
    height: 23px;
    width: 100%;
    background: #d9d9d9;
  }

  .social-info {
    display: flex;
    width: 358px;
    height: 32px;
    padding: 0 4px 0 8px;
    justify-content: space-between;
    align-items: center;
  }

  .social-handle {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    flex: 1 0 0;
  }

  .handle-text {
    color: #000;
    font-family:
      Agrandir,
      -apple-system,
      Roboto,
      Helvetica,
      sans-serif;
    font-size: 12px;
    font-weight: 400;
    line-height: normal;
  }

  .social-icon {
    display: grid;
    width: 32px;
    height: 32px;
    padding: 4px;
    aspect-ratio: 1/1;
    grid-template-rows: repeat(1, minmax(0, 1fr));
    grid-template-columns: repeat(1, minmax(0, 1fr));
    border-radius: 8px;
  }

  .logo-image {
    width: 96px;
    flex-shrink: 0;
    align-self: stretch;
  }

  .about-image {
    display: flex;
    padding: 4px;
    flex-direction: column;
    align-items: flex-start;
    gap: 16px;
    flex: 1 0 0;
    border: 1px solid #996365;
  }

  .image-placeholder {
    height: 368px;
    width: 100%;
    background: #d9d9d9;
  }

  /* Why Choose Us Section */
  .why-choose-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 32px;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    background: #f9f3e7;
  }

  .features-grid {
    display: flex;
    padding: 4px;
    align-items: flex-start;
    gap: 16px;
    width: 100%;
  }

  .feature-card {
    display: grid;
    height: 376px;
    padding: 4px;
    row-gap: 16px;
    column-gap: 16px;
    flex: 1 0 0;
    grid-template-rows: fit-content(100%);
    grid-template-columns: repeat(1, minmax(0, 1fr));
    border: 1px solid #996365;
  }

  .feature-content {
    flex: 1 0 0;
    align-self: stretch;
    grid-row: 1 / span 1;
    grid-column: 1 / span 1;
    background: #d9d9d9;
  }

  /* Social Proof Section */
  .social-proof-section {
    display: flex;
    padding: 16px 0;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    background: #f9f3e7;
  }

  .testimonials-container {
    display: flex;
    height: 244px;
    padding: 8px 48px;
    justify-content: center;
    align-items: center;
    gap: 16px;
    width: 100%;
  }

  .testimonial-card {
    display: grid;
    height: 236px;
    padding: 4px;
    row-gap: 16px;
    column-gap: 16px;
    flex: 1 0 0;
    grid-template-rows: fit-content(100%);
    grid-template-columns: repeat(1, minmax(0, 1fr));
    border: 1px solid #996365;
  }

  .testimonial-content {
    flex: 1 0 0;
    align-self: stretch;
    grid-row: 1 / span 1;
    grid-column: 1 / span 1;
    background: #d9d9d9;
  }

  .testimonial-nav {
    display: flex;
    align-items: flex-start;
    gap: 32px;
  }

  .nav-btn {
    display: flex;
    width: 64px;
    height: 64px;
    justify-content: center;
    align-items: center;
    gap: 16px;
    border-radius: 32px;
    background: #996365;
    border: none;
    cursor: pointer;
    color: #fff;
    text-align: center;
    font-family:
      Inter,
      -apple-system,
      Roboto,
      Helvetica,
      sans-serif;
    font-size: 24px;
    font-weight: 400;
    line-height: normal;
  }

  /* Footer */
  .footer {
    display: flex;
    width: 100%;
    max-width: 1440px;
    margin: 0 auto;
    padding: 16px 32px;
    align-items: flex-start;
    gap: 32px;
    background: #f9f3e7;
  }

  .footer-brand {
    display: flex;
    padding: 0 32px;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .footer-logo {
    width: 128px;
    height: 128px;
    aspect-ratio: 1/1;
  }

  .footer-social {
    display: flex;
    padding: 0 4px 0 8px;
    align-items: center;
    gap: 16px;
  }

  .social-handles {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
  }

  .social-handle-item {
    color: #000;
    font-family:
      Agrandir,
      -apple-system,
      Roboto,
      Helvetica,
      sans-serif;
    font-size: 12px;
    font-weight: 400;
    line-height: normal;
    padding: 4px;
    border-radius: 8px;
  }

  .footer-content {
    display: flex;
    padding: 16px 0;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    align-self: stretch;
    border-radius: 16px;
  }

  .footer-nav {
    display: flex;
    align-items: center;
    gap: 64px;
    width: 100%;
    border-radius: 16px;
  }

  .nav-link {
    width: 128px;
    color: #000;
    font-family:
      Agrandir,
      -apple-system,
      Roboto,
      Helvetica,
      sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: normal;
    text-decoration: none;
  }

  .contact-info {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
  }

  .contact-group {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
    width: 280px;
  }

  .contact-label {
    color: #000;
    font-family:
      Agrandir,
      -apple-system,
      Roboto,
      Helvetica,
      sans-serif;
    font-size: 12px;
    font-weight: 400;
    line-height: normal;
  }

  .contact-value {
    color: #000;
    font-family:
      Agrandir,
      -apple-system,
      Roboto,
      Helvetica,
      sans-serif;
    font-size: 12px;
    font-weight: 400;
    line-height: normal;
  }

  /* Floating Contact Widget */
  .floating-contact {
    position: fixed;
    right: 0;
    bottom: 0;
    display: flex;
    width: 402px;
    height: 128px;
    padding: 8px 12px 8px 32px;
    justify-content: flex-end;
    align-items: center;
  }

  .contact-widget {
    display: flex;
    padding: 8px 0 8px 16px;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 8px;
    border-radius: 16px;
    background: #f9f3e7;
  }

  .contact-icons {
    display: flex;
    padding-right: 4px;
    justify-content: flex-end;
    align-items: center;
    gap: 16px;
    border-radius: 16px;
  }

  .icon-group-top,
  .icon-group-bottom {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 8px;
  }

  .icon-group-top {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .icon-group-bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    width: 100%;
  }

  .widget-logo {
    width: 96px;
    align-self: stretch;
  }

  .floating-logo {
    width: 96px;
    height: 96px;
    aspect-ratio: 1/1;
    position: absolute;
    right: 16px;
    top: 16px;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .homepage {
      padding-top: 32px;
    }

    .hero-content {
      padding: 16px 32px;
    }

    .product-grid,
    .features-grid {
      flex-direction: column;
    }

    .about-content {
      flex-direction: column;
    }

    .testimonials-container {
      padding: 8px 16px;
    }

    .footer {
      flex-direction: column;
      padding: 16px;
    }

    .footer-nav {
      flex-direction: column;
      gap: 16px;
    }

    .contact-info {
      flex-direction: column;
      gap: 16px;
    }

    .floating-contact {
      width: 100%;
      padding: 8px 16px;
    }
  }
</style>
