---
import Hero from "@components/home/hero.astro";
import BestSellers from "./best-sellers.astro";
import About from "./about.astro";
import SocialProof from "./social-proof.astro";
---

<main class="homepage flex flex-col gap-4 pb-96">
  <!-- Hero Section -->
  <Hero />
  <!-- Best Sellers Section -->
  <BestSellers />

  <!-- About Section -->
  <About />

  <!-- Social Proof Section -->
  <SocialProof />
</main>

<style is:global>
  section {
    display: flex;
    min-height: 512px;
    flex-direction: column;
    align-items: center;
    gap: 32px;
    width: 100%;
    /* max-width: 1440px; */
    margin: 0 auto;
    background: #f9f3e7;
    padding: 5rem 1rem;

    .section-title {
      width: 100%;
      color: #000;
      text-align: center;
      font-family:
        Inter,
        -apple-system,
        Roboto,
        Helvetica,
        sans-serif;
      font-size: 2rem;
      font-weight: 400;
      line-height: normal;
    }
  }
</style>
